<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Pos?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.megacitycab.LogoutController" style="-fx-background-color: linear-gradient(to right, #2c3e50, #34495e);">
    <!-- Center section with styled content -->
    <center>
        <VBox alignment="CENTER" spacing="30" style="-fx-background-color: white;
                                                       -fx-padding: 40px;
                                                       -fx-border-radius: 12px;
                                                       -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.15), 12, 0.5, 0, 2);
                                                       -fx-min-width: 350px;
                                                       -fx-min-height: 200px;">
            <!-- Confirmation message -->
            <Label text="Are you sure you want to logout?" style="-fx-font-size: 22px;
                                                                  -fx-font-weight: bold;
                                                                  -fx-text-fill: #2c3e50;
                                                                  -fx-font-family: 'Arial';"/>

            <!-- Button group for Yes and No -->
            <HBox spacing="20" alignment="CENTER">
                <Button text="Yes" fx:id="btnYes" onAction="#handleYes" style="-fx-padding: 12px 24px;
                                                                                -fx-background-color: #27ae60;
                                                                                -fx-text-fill: white;
                                                                                -fx-font-size: 16px;
                                                                                -fx-font-family: 'Arial';
                                                                                -fx-border-radius: 6px;
                                                                                -fx-cursor: hand;
                                                                                -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.2), 8, 0.5, 0, 0);"/>
                <Button text="No" fx:id="btnNo" onAction="#handleNo" style="-fx-padding: 12px 24px;
                                                                            -fx-background-color: #e74c3c;
                                                                            -fx-text-fill: white;
                                                                            -fx-font-size: 16px;
                                                                            -fx-font-family: 'Arial';
                                                                            -fx-border-radius: 6px;
                                                                            -fx-cursor: hand;
                                                                            -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.2), 8, 0.5, 0, 0);"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
